<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/widget_button_pressed" />
            <stroke android:width="1dp" android:color="@color/widget_button_border" />
        </shape>
    </item>
    
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="@color/widget_button_focused" />
            <stroke android:width="1dp" android:color="@color/widget_button_border" />
        </shape>
    </item>
    
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/widget_button_active" />
            <stroke android:width="1dp" android:color="@color/widget_button_border" />
        </shape>
    </item>
    
    <!-- Default state -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/widget_button_normal" />
            <stroke android:width="1dp" android:color="@color/widget_button_border" />
        </shape>
    </item>
</selector>
