<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/widget_background">

    <!-- Simple header -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video Widget"
        android:textColor="@color/widget_text_color"
        android:textSize="14sp"
        android:textStyle="bold"
        android:padding="4dp"
        android:gravity="center"
        android:background="@color/widget_header_background" />

    <!-- Video thumbnail area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="4dp">

        <ImageView
            android:id="@+id/video_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_video_placeholder"
            android:contentDescription="Video thumbnail" />

        <!-- Play overlay -->
        <ImageView
            android:id="@+id/play_overlay"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_play"
            android:background="@drawable/widget_button_background"
            android:contentDescription="Play video" />

    </FrameLayout>

    <!-- Simple controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="4dp"
        android:layout_marginTop="4dp"
        android:background="@color/widget_control_background">

        <ImageButton
            android:id="@+id/previous_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_skip_previous"
            android:background="@drawable/widget_button_background"
            android:contentDescription="Previous video"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/play_pause_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_play"
            android:background="@drawable/widget_button_background"
            android:contentDescription="Play/Pause"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_skip_next"
            android:background="@drawable/widget_button_background"
            android:contentDescription="Next video" />

    </LinearLayout>

</LinearLayout>
