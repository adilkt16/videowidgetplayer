<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    android:background="@drawable/widget_background">

    <!-- Large widget layout for 4x4+ size -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Widget header with title and settings -->
        <LinearLayout
            android:id="@+id/widget_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:background="@color/widget_header_background">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_video_placeholder"
                android:layout_marginEnd="8dp"
                android:contentDescription="App icon" />

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/video_widget_name"
                android:textColor="@color/widget_text_color"
                android:textSize="14sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/video_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@color/widget_text_color"
                android:textSize="10sp"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/widget_settings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"
                android:background="@android:color/transparent"
                android:contentDescription="Settings"
                android:scaleType="centerInside" />

        </LinearLayout>

        <!-- Video display area -->
        <FrameLayout
            android:id="@+id/video_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/black">

            <!-- Video thumbnail/preview -->
            <ImageView
                android:id="@+id/video_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_video_placeholder"
                android:contentDescription="Video thumbnail" />

            <!-- Video surface view placeholder -->
            <FrameLayout
                android:id="@+id/video_surface_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <!-- Play overlay -->
            <ImageView
                android:id="@+id/play_overlay"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_play_circle"
                android:contentDescription="Play video"
                android:alpha="0.8" />

            <!-- Loading indicator -->
            <ProgressBar
                android:id="@+id/loading_indicator"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="gone" />

            <!-- Video info overlay -->
            <LinearLayout
                android:id="@+id/video_info_overlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:background="@drawable/gradient_overlay"
                android:padding="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/video_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Video Title"
                    android:textColor="@color/widget_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="2" />

            </LinearLayout>

        </FrameLayout>

        <!-- Extended control panel -->
        <LinearLayout
            android:id="@+id/control_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/widget_control_background"
            android:padding="8dp">

            <!-- Progress bar with time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/widget_text_color"
                    android:textSize="10sp"
                    android:layout_marginEnd="8dp" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:secondaryProgress="0" />

                <TextView
                    android:id="@+id/total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/widget_text_color"
                    android:textSize="10sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Full control buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/shuffle_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_shuffle"
                    android:background="@android:color/transparent"
                    android:contentDescription="Shuffle"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/previous_button"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_skip_previous"
                    android:background="@android:color/transparent"
                    android:contentDescription="Previous"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/rewind_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_rewind"
                    android:background="@android:color/transparent"
                    android:contentDescription="Rewind 10s"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/play_pause_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_play"
                    android:background="@drawable/widget_button_background"
                    android:contentDescription="@string/play"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/forward_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_fast_forward"
                    android:background="@android:color/transparent"
                    android:contentDescription="Forward 10s"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/next_button"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_skip_next"
                    android:background="@android:color/transparent"
                    android:contentDescription="Next"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/mute_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_volume_up"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/mute"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/repeat_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_repeat"
                    android:background="@android:color/transparent"
                    android:contentDescription="Repeat"
                    android:scaleType="centerInside" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
