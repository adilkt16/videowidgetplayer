<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    android:background="@drawable/widget_background">

    <!-- Main video content area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Widget header with title -->
        <LinearLayout
            android:id="@+id/widget_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:background="@color/widget_header_background">

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/video_widget_name"
                android:textColor="@color/widget_text_color"
                android:textSize="12sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1" />

            <ImageButton
                android:id="@+id/widget_settings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Settings"
                android:scaleType="centerInside" />

        </LinearLayout>

        <!-- Video display area -->
        <FrameLayout
            android:id="@+id/video_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/black">

            <!-- Video thumbnail/preview -->
            <ImageView
                android:id="@+id/video_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_video_placeholder"
                android:contentDescription="Video thumbnail" />

            <!-- Video surface view placeholder (for actual video playback) -->
            <FrameLayout
                android:id="@+id/video_surface_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <!-- Play overlay -->
            <ImageView
                android:id="@+id/play_overlay"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_play_circle"
                android:contentDescription="Play video"
                android:alpha="0.8" />

            <!-- Loading indicator -->
            <ProgressBar
                android:id="@+id/loading_indicator"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:visibility="gone" />
                
            <!-- Transition hint text -->
            <TextView
                android:id="@+id/transition_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="gone"
                android:alpha="0.8" />

        </FrameLayout>

        <!-- Control panel -->
        <LinearLayout
            android:id="@+id/control_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/widget_control_background"
            android:padding="8dp">

            <!-- Progress bar -->
            <SeekBar
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:max="100"
                android:progress="0"
                android:secondaryProgress="0"
                android:thumbOffset="0dp" />

            <!-- Control buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="4dp">

                <ImageButton
                    android:id="@+id/previous_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_skip_previous"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Previous"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/rewind_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_rewind"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Rewind 10s"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/play_pause_button"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_play"
                    android:background="@drawable/widget_button_background"
                    android:contentDescription="@string/play"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/forward_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/ic_fast_forward"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Forward 10s"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/next_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_skip_next"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Next"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/mute_button"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/ic_volume_up"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/mute"
                    android:scaleType="centerInside" />

            </LinearLayout>

            <!-- Time display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="4dp">

                <TextView
                    android:id="@+id/current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/widget_text_color"
                    android:textSize="10sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/widget_text_color"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Widget resize handle (visible during resize) -->
    <View
        android:id="@+id/resize_handle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="bottom|end"
        android:background="@drawable/ic_resize_handle"
        android:visibility="gone" />

</FrameLayout>
